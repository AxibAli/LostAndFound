@model List<Lost_And_Found.Models.PostProductModel>
@{
    ViewBag.Title = "AllPosts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="row" style="padding-left:80px;">
        @foreach (var item in Model)
        {
            <div class="card" style="width:20em;margin:10px;">
                <img src="@Url.Content(item.Product_Image)" class="card-img-top" />
                <div class="card-body">
                    <div class="card-title">
                        <h2>@item.Product_Name</h2>
                    </div>
                    <div class="card-text">
                        <p>@item.Product_Description</p>
                    </div>
                    <div>
                        <a href="#" class="btn btn-primary">Read More...</a>
                        <br />
                        @{
                            var stat = string.Empty;
                            if (@item.Product_IsActive == true)
                            {
                                stat = "checked";
                            }
                            else
                            {
                                stat = "";
                            }
                            <label class="switch btn btn-icon">
                                <input type="checkbox" id="switchId-@item.Product_Id" onchange="UpdatePostStatus(this,  @item.Product_Id)" @stat>
                                <span class="slider round"></span>
                            </label>
                        }
                        <a href="#" class="btn btn-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="40" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a>
                        <a href="#" class="btn btn-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="40" fill="currentColor" class="bi bi-chat-left" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

<script>
    function UpdatePostStatus(data, productid) {
        var id = data.id;
        var status = document.getElementById(id).checked

        $.post("/Admin/UpdatePostStatus",
            {
                Status: status,
                productid: productid
            },
            function (data) {
                if (data == true) {

                }
                else {
                    document.getElementById(id).checked = status;
                    alert("Error Updating")
                }
                console.log(status)
            });
    }
</script>
